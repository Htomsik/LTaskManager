<UserControl 
             x:Class="Client.Views.AgreementView"
             x:DataType="viewModels:AgreementViewModel"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Client.ViewModels"
             xmlns:assets="clr-namespace:Client.Assets"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="640"
             >
    <Grid RowDefinitions="0.92*, 0.08*" Background="Azure" >
        <Grid Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="{x:Static assets:Resources.ProcessViewProductName}" />
        </Grid>
        <Grid Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button HorizontalAlignment="Center" Command="{Binding AgreementAcceptance}" Content="Agree" HorizontalContentAlignment="Center" ></Button>
        </Grid>
    </Grid>
</UserControl>
